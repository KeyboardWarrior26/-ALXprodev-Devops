#!/bin/bash

# Read from local JSON file (created in Task 0)
json_file="pikachu.json"

# Extract required fields using jq
name=$(jq -r '.name' "$json_file" | sed 's/.*/\u&/')  # Capitalize
type=$(jq -r '.types[0].type.name' "$json_file" | sed 's/.*/\u&/')
weight=$(jq '.weight' "$json_file")
height=$(jq '.height' "$json_file")

# Format weight and height (divide by 10 to convert to kg and meters)
formatted_weight=$(echo "$weight" | awk '{printf "%.1f", $1/10}')
formatted_height=$(echo "$height" | awk '{printf "%.1f", $1/10}')

# Final output
echo "$name is of type $type, weighs ${formatted_weight}kg, and is ${formatted_height}m tall."

